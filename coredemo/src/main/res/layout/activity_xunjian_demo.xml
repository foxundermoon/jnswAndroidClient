<android.support.v4.widget.StickDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/xunjian_demo_root"
    tools:context="com.jnsw.coredemo.xunjiandemo.XunjianDemoActivity_">


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/main_container"
        android:background="@android:color/holo_red_dark"
        android:gravity="center_horizontal">

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:id="@+id/center_float_container"
            android:layout_marginBottom="20dp"
            android:name="com.jnsw.coredemo.xunjiandemo.FloatCenterFragment_"
            />


    </RelativeLayout>
    <!--<fragment-->
        <!--android:id="@+id/container_fragment"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

    <fragment
        android:id="@+id/left_fragment"
        android:layout_gravity="start"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:background="#a0000000"
        android:name="com.jnsw.coredemo.xunjiandemo.LeftFragment_"
        tools:layout="@layout/fragment_left" />

    <fragment
        android:id="@+id/right_fragment"
        android:layout_gravity="end"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:name="com.jnsw.coredemo.xunjiandemo.RightFragment_"
        tools:layout="@layout/fragment_right" />


</android.support.v4.widget.StickDrawerLayout>
